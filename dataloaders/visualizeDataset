    print('hello')
    
def select_n_random(data, labels, n=5):
    '''
    Selects n random datapoints and their corresponding labels from a dataset
    '''
    assert len(data) == len(labels)

    perm = torch.randperm(len(data))
    
    return data[perm][:n], labels[perm][:n]


